{
  "name": "super-bart",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run lint:content && npm run lint:assets && npm run lint:style && npm run lint:audio && npm run lint:visual && vitest run tests/*.test.ts tests/*.test.js",
    "test:e2e": "npx playwright test tests/e2e/ --project=chromium",
    "ci:gates": "npm run gen:all && npm run lint:assets && npm run lint:style && npm run lint:audio && npm run lint:visual && npm test && npm run build",
    "ci:gates:log": "node scripts/run_ci_gates.mjs",
    "playfeel:phase2": "node scripts/run_playfeel_phase2.mjs",
    "assets:generate": "python3 tools/generate_assets.py --pass all",
    "assets:generate:core": "python3 tools/generate_assets.py --pass core",
    "assets:generate:enemy": "python3 tools/generate_assets.py --pass enemy",
    "assets:generate:hazard": "python3 tools/generate_assets.py --pass hazard",
    "assets:generate:objects": "python3 tools/generate_assets.py --pass object",
    "assets:generate:tiles": "python3 tools/generate_assets.py --pass tile",
    "assets:validate": "python3 tools/asset_validate.py",
    "levelgen:smoke": "python3 tools/levelgen_smoke.py --world 1 --level 1 --seed 1337",
    "mechanics:validate": "python3 tools/mechanics_validate.py",
    "validate": "python3 tools/validate_repo.py",
    "level:preview": "tsx tools/level_preview.ts --world 1 --level 1 --seed 1337",
    "gen:avatars": "tsx tools/make_bart_sprites.ts",
    "gen:body": "tsx tools/make_body_spritesheet.ts",
    "gen:assets": "tsx tools/make_ui_assets.ts",
    "gen:enemies": "tsx tools/make_enemy_spritesheets.ts",
    "gen:boss": "echo 'Boss not implemented yet'",
    "gen:all": "echo 'Skipping gen:all to preserve custom assets'",
    "prebuild": "echo 'Skipping prebuild'",
    "lint:style": "tsx tools/style_validate.ts",
    "lint:assets": "tsx tools/asset_validate.ts",
    "lint:audio": "tsx tools/audio_validate.ts",
    "lint:visual": "tsx tools/visual_regress.ts",
    "lint:content": "tsx tools/content_validate.ts",
    "visual:capture": "tsx tools/capture_visual_baselines.ts",
    "visual:update-golden": "tsx tools/capture_visual_baselines.ts --update-golden"
  },
  "dependencies": {
    "@esbuild/linux-arm64": "^0.21.5",
    "@rollup/rollup-linux-arm64-gnu": "^4.57.1",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.2",
    "@types/pngjs": "^6.0.5",
    "playwright": "^1.58.2",
    "pngjs": "^7.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.9"
  }
}
