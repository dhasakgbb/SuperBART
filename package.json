{
  "name": "super-bart",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "node -e \"console.warn('⚠️  Legacy Phaser runtime is reference-only. Unity is canonical. See docs/unity_cutover_plan.md')\" && npm run phaser:dev",
    "build": "node -e \"console.warn('⚠️  Legacy Phaser build is reference-only. Unity is canonical. See docs/unity_cutover_plan.md')\" && npm run phaser:build",
    "preview": "node -e \"console.warn('⚠️  Legacy Phaser preview is reference-only. Unity is canonical. See docs/unity_cutover_plan.md')\" && npm run phaser:preview",
    "phaser:dev": "vite",
    "phaser:build": "vite build",
    "phaser:preview": "vite preview",
    "legacy:dev": "npm run phaser:dev",
    "legacy:build": "npm run phaser:build",
    "legacy:preview": "npm run phaser:preview",
    "unity:ship:sync": "npm run unity:fixtures:build",
    "unity:ship:build": "node scripts/unity_ship_build.mjs",
    "unity:ship:smoke": "node scripts/unity_ship_smoke.mjs",
    "unity:ship:sync:full": "npm run unity:fixtures:build -- --media-profile full",
    "test": "npm run lint:content && npm run lint:assets && npm run lint:style && npm run lint:audio && npm run lint:visual && vitest run tests/*.test.ts tests/*.test.js",
    "test:e2e": "npx playwright test tests/e2e/ --project=chromium",
    "ci:gates": "npm run music:ai:prepare && npm run gen:all && npm run lint:assets && npm run lint:style && npm run lint:audio && npm run lint:visual && npm test && npm run build",
    "ci:gates:log": "node scripts/run_ci_gates.mjs",
    "playfeel:phase2": "node scripts/run_playfeel_phase2.mjs",
    "qa:unity:ship": "node scripts/qa_unity_ship.mjs",
    "unity:kit:zip": "node scripts/package_unity_port_kit.mjs",
    "unity:export:single": "tsx scripts/export_levels_for_unity.ts --out artifacts/unity/levels --world 1 --levels 2",
    "unity:export:all": "tsx scripts/export_levels_for_unity.ts --all --out artifacts/unity/levels",
    "unity:metrics:export": "tsx scripts/export_unity_movement_metrics.ts --out unity-port-kit/Assets/SuperbartPort/Resources/Fixtures/parity/movement_metrics.json",
    "unity:media:sync": "tsx scripts/export_unity_media.ts --out unity-port-kit/Assets/SuperbartAssets --audio true --manifest true",
    "unity:media:sync:ui": "tsx scripts/export_unity_media.ts --out unity-port-kit/Assets/SuperbartAssets --audio true --manifest true --profile ui",
    "unity:media:sync:full": "tsx scripts/export_unity_media.ts --out unity-port-kit/Assets/SuperbartAssets --audio true --manifest true --profile full",
    "unity:media:audit": "tsx scripts/export_unity_media_audit.ts",
    "unity:media:audit:ui": "tsx scripts/export_unity_media_audit.ts --profile ui",
    "unity:media:audit:full": "tsx scripts/export_unity_media_audit.ts --profile full",
    "unity:media:backlog": "tsx scripts/export_unity_media_backlog.ts --out artifacts/unity/media-backlog-m1.json --profile m1",
    "unity:media:backlog:ui": "tsx scripts/export_unity_media_backlog.ts --out artifacts/unity/media-backlog-ui.json --profile ui",
    "unity:media:backlog:full": "tsx scripts/export_unity_media_backlog.ts --out artifacts/unity/media-backlog-full.json --profile full",
    "unity:fixtures:build": "node scripts/build_unity_fixtures.mjs",
    "unity:fixtures:build:ui": "node scripts/build_unity_fixtures.mjs --media-profile ui",
    "unity:fixtures:build:full": "node scripts/build_unity_fixtures.mjs --media-profile full",
    "unity:verify:m1": "node scripts/verify_unity_m1.mjs",
    "music:ai:generate": "tsx scripts/generate_ai_music.ts",
    "music:ai:generate:force": "tsx scripts/generate_ai_music.ts --force",
    "music:ai:normalize": "python3 scripts/normalize_ai_music.py",
    "music:ai:audit": "python3 scripts/audit_ai_music.py",
    "music:ai:prepare": "if [ -n \"${HF_API_TOKEN}${HUGGINGFACE_TOKEN}\" ]; then npm run music:ai:generate -- --force; npm run music:ai:normalize; fi; npm run music:ai:audit",
    "assets:generate": "python3 tools/generate_assets.py --pass all",
    "assets:generate:core": "python3 tools/generate_assets.py --pass core",
    "assets:generate:enemy": "python3 tools/generate_assets.py --pass enemy",
    "assets:generate:hazard": "python3 tools/generate_assets.py --pass hazard",
    "assets:generate:objects": "python3 tools/generate_assets.py --pass object",
    "assets:generate:tiles": "python3 tools/generate_assets.py --pass tile",
    "assets:validate": "python3 tools/asset_validate.py",
    "levelgen:smoke": "python3 tools/levelgen_smoke.py --world 1 --level 1 --seed 1337",
    "mechanics:validate": "python3 tools/mechanics_validate.py",
    "validate": "python3 tools/validate_repo.py",
    "level:preview": "tsx tools/level_preview.ts --world 1 --level 1 --seed 1337",
    "gen:avatars": "tsx tools/make_bart_sprites.ts",
    "gen:body": "tsx tools/make_body_spritesheet.ts",
    "gen:assets": "tsx tools/make_ui_assets.ts",
    "gen:enemies": "tsx tools/make_enemy_spritesheets.ts",
    "gen:boss": "tsx tools/make_boss_spritesheet.ts",
    "gen:all": "echo 'Skipping gen:all to preserve custom assets'",
    "prebuild": "echo 'Skipping prebuild'",
    "lint:style": "tsx tools/style_validate.ts",
    "lint:palette": "tsx tools/palette_validate.ts",
    "lint:assets": "tsx tools/asset_validate.ts",
    "lint:audio": "tsx tools/audio_validate.ts",
    "lint:visual": "tsx tools/visual_regress.ts",
    "lint:content": "tsx tools/content_validate.ts",
    "visual:capture": "tsx tools/capture_visual_baselines.ts",
    "visual:update-golden": "tsx tools/capture_visual_baselines.ts --update-golden"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "optionalDependencies": {
    "@esbuild/linux-arm64": "^0.21.5",
    "@rollup/rollup-linux-arm64-gnu": "^4.57.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.2",
    "@types/pngjs": "^6.0.5",
    "playwright": "^1.58.2",
    "pngjs": "^7.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.9"
  }
}
